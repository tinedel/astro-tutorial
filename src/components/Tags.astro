---
const allPosts = Object.values(import.meta.glob('../pages/posts/*.md', {eager: true}));

let { tags } = Astro.props
tags = tags ?? [...new Set(allPosts.flatMap((post: any) => post.frontmatter.tags))];
---

<div class="tags">
{tags.map((tag) => <a class="tag" href={`/astro-tutorial/tags/${tag}`}>{tag}</a>)}
</div>

<style>
    a {
        color: #00539F;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
    }
</style>